# Engineering Skills Radar - Backend Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=engineering_skills_radar
DB_USER=esr_admin
DB_PASSWORD=your_secure_password_here

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# Application Settings
APP_NAME=Engineering Skills Radar
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage (MinIO/S3)
STORAGE_TYPE=minio  # or 's3'
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=esr-documents
MINIO_SECURE=False

# AWS S3 (if using S3 instead of MinIO)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=ap-south-1
# S3_BUCKET_NAME=esr-documents

# Upload Limits
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=pdf,docx,csv,xlsx

# CSV Import Settings
CSV_MAX_ROWS=1000
CSV_BATCH_SIZE=100

# NLP Model Settings
SPACY_MODEL=en_core_web_sm
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
SKILL_SIMILARITY_THRESHOLD=0.75

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/esr.log

# Redis (for caching - optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
